{
  "name": "@ai-pip/core",
  "version": "0.1.3",
  "description": "Core implementation of the AI-PIP protocol. Provides layered, zero-trust context processing (CSL, ISL, CPE, ALL, ModelGateway)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./csl": {
      "types": "./dist/csl/index.d.ts",
      "import": "./dist/csl/index.js",
      "default": "./dist/csl/index.js"
    },
    "./isl": {
      "types": "./dist/isl/index.d.ts",
      "import": "./dist/isl/index.js",
      "default": "./dist/isl/index.js"
    },
    "./cpe": {
      "types": "./dist/cpe/index.d.ts",
      "import": "./dist/cpe/index.js",
      "default": "./dist/cpe/index.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "import": "./dist/shared/index.js",
      "default": "./dist/shared/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "tsconfig.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "lint": "eslint src --max-warnings=0",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:install": "node test-package-install.js",
    "prepublishOnly": "pnpm build && pnpm lint && pnpm test --run && pnpm test:install"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "keywords": [
    "ai",
    "security",
    "prompt-injection",
    "context-processing",
    "zero-trust"
  ],
  "author": "MasliahDev d3vTek-mv@outlook.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/AI-PIP/ai-pip-core"
  },
  "bugs": {
    "url": "https://github.com/AI-PIP/ai-pip-core/issues"
  },
  "homepage": "https://github.com/AI-PIP/ai-pip-core#readme",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.19.3",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.39.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^2.1.9"
  },
  "publishConfig": {
    "access": "public"
  }
}
