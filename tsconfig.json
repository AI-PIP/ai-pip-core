{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
  
      "rootDir": "src",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
  
      "strict": true,
  
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "emitDeclarationOnly": false,
  
      "types": ["node"],
  
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
  
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "test"]
}